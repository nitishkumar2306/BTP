<mvc:View
    controllerName="com.orders.ordersapp.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="detailsPage" 
          title="{i18n>title}" 
          showNavButton="true"
          navButtonPress=".onNavBack">
        <content>
            <ObjectHeader 
                title="{orderView>/OrderID}"
                number="{orderView>/Freight}"
                numberUnit="USD">
                <attributes>
                    <ObjectAttribute text="{orderView>/ShipName}"/>
                    <ObjectAttribute text="{orderView>/ShipAddress}"/>
                    <ObjectAttribute text="{path: 'orderView>/OrderDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}"/>
                </attributes>
            </ObjectHeader>
            <Table items="{orderView>/Order_Details}">
                <columns>
                    <Column>
                        <Text text="Product ID" />
                    </Column>
                    <Column>
                        <Text text="Unit Price" />
                    </Column>
                    <Column>
                        <Text text="Quantity" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{orderView>ProductID}" />
                            <Text text="{orderView>UnitPrice}" />
                            <Text text="{orderView>Quantity}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
