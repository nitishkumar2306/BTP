<mvc:View controllerName="com.orders.ordersapp.controller.home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>
        <Table id="idOrdersTable" items="{/Orders}" alternateRowColors="true" growing="true" growingThreshold="20" sticky="ColumnHeaders">
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="{localModel>/title}" level="H2"></Title>
                    <ToolbarSpacer/>
                    <SearchField width="20%" search=".onSearch"/>
                    <Button tooltip="Sort" icon="sap-icon://sort" press=".onSort"></Button>
                    <Button tooltip="Group" icon="sap-icon://group-2" press=".onGroup"></Button>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>orderIdColumn}"></Text>
                </Column>
                <Column>
                    <Text text="{i18n>customerIdColumn}"></Text>
                </Column>
                <Column>
                    <Text text="{i18n>orderDateColumn}"></Text>
                </Column>
                <Column>
                    <Text text="{i18n>freightColumn}"></Text>
                </Column>               
                <Column>
                    <Text text="{i18n>shipNameColumn}"></Text>
                </Column>
            </columns>
            <items>
              <ColumnListItem type="Navigation" press=".onPress">
                    <cells>
                          <Text text="{OrderID}" />
                            <Text text="{CustomerID}" />
                            <ObjectStatus 
                                text="{
                                    path: 'OrderDate',
                                    type: 'sap.ui.model.type.Date',
                                    formatOptions: {
                                        style: 'medium'
                                    }
                                }"
                                state="{ 
                                    path: 'OrderDate',
                                    formatter: '.formatDateColor'
                                }"
                            />
                            <ObjectStatus text="{path: 'Freight', formatter: '.formatter.formatterFreight'}" icon="{path: 'Freight', formatter: '.formatter.formatterIcon'}" state="{path: 'Freight', formatter: '.formatter.formatterStatus'}"></ObjectStatus>
                            <Text text="{ShipName}" />                        
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </content>
    </Page>
</mvc:View> 