{
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/app-logout",
    "logoutPage": "/"
  },
  "routes": [
    {
      "source": "^/comsapsalesinventorymanagementapp/(.*)$",
      "target": "$1",
      "localDir": "app/salesinventorymanagementapp/dist",
      "service": "SalesAndInventoryManagement-html5-srv",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "destination": "srv-api",
      "csrfProtection": true
    },
    {
      "source": "^/user-api(.*)",
      "target": "$1",
      "service": "sap-approuter-userapi"
    },
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/appconfig/",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    }
  ],
  "welcomeFile": "/comsapsalesinventorymanagementapp/index.html"
}
