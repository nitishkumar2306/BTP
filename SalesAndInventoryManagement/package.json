{
  "name": "SalesAndInventoryManagement",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/http-client": "^3.22.2",
    "@sap-cloud-sdk/mail-client": "^3.23.0",
    "@sap-cloud-sdk/resilience": "^3.22.2",
    "@sap/approuter": "^17.1.0",
    "@sap/cds": "^8.4.0",
    "@sap/cds-common-content": "^2.1.0",
    "@sap/hana-client": "^2.22.32",
    "@sap/hdi-deploy": "^5.3.2",
    "@sap/xsenv": "^4.2.0",
    "@sap/xssec": "^4",
    "approuter": "file:app/router",
    "cookie": "^1.0.2",
    "express": "^4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@sap/cds-dk": "^8.4.1"
  },
  "scripts": {
    "start": "cds-serve",
    "start:dev": "cds run --profile development",
    "generate:default-env": "cf curl \"/v2/apps/$(cf app --guid SalesAndInventoryManagement-srv)/env\" | npx node-jq -r '.system_env_json' > default-env.json",
    "deploy:cf": "npx mbt build --mtar deploy.mtar && cf deploy ./mta_archives/deploy.mtar"
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "db": {
        "kind": "hana-cloud"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "kind": "mocked",
          "users": {
            "Quint": {
              "password": "quint",
              "roles": [
                "Admin"
              ]
            },
            "Bob": {
              "password": "bob",
              "roles": [
                "SalesReps"
              ]
            },
            "Colin": {
              "password": "colin",
              "roles": [
                "InventoryManager"
              ]
            }
          }
        }
      },
      "connectivity": true,
      "destinations": true,
      "northwindAPI": {
        "kind": "rest",
        "credentials": {
          "destination": "Northwind"
        }
      },
      "emailService": {
        "kind": "rest",
        "credentials": {
          "destination": "mail_destination",
          "forwardAuthToken": true
        }
      }
    }
  }
}
